<Page
    x:Class="_123云盘UWP.Setting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_123云盘UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:controls="using:Microsoft.UI.Xaml.Controls" 
    xmlns:icons="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="ThemeExpanderHeader">
            <StackPanel Orientation="Horizontal" 
                        Margin="12,10" 
                        HorizontalAlignment="Stretch">
                <FontIcon Glyph="&#xe793;"
                    FontFamily="Segoe MDL2 Assets"
                          Width="20" Height="20"
                          VerticalAlignment="Center"
                          Margin="0,0,12,0"/>
                <StackPanel HorizontalAlignment="Stretch">
                    <TextBlock Text="应用主题" 
                               FontSize="16" 
                               FontWeight="SemiBold"/>
                    <TextBlock Text="选择要显示的应用主题" 
                               FontSize="12" 
                               Opacity="0.7"/>
                </StackPanel>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="ThemeExpanderHeader2">
            <StackPanel Orientation="Horizontal" 
                Margin="12,10" 
                HorizontalAlignment="Stretch">
                <FontIcon Glyph="&#xe790;"
            FontFamily="Segoe MDL2 Assets"
                  Width="20" Height="20"
                  VerticalAlignment="Center"
                  Margin="0,0,12,0"/>
                <StackPanel HorizontalAlignment="Stretch">
                    <TextBlock Text="页面材质" 
                       FontSize="16" 
                       FontWeight="SemiBold"/>
                    <TextBlock Text="选择要使用的页面材质" 
                       FontSize="12" 
                       Opacity="0.7"/>
                </StackPanel>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="CustomExpanderHeader1">
            <Grid HorizontalAlignment="Stretch">
                <StackPanel Orientation="Horizontal" Margin="12,10" HorizontalAlignment="Left">
                    <FontIcon 
                        Glyph="&#xe946;"
                        FontFamily="Segoe MDL2 Assets"
                        Width="20" 
                        Height="20"
                        VerticalAlignment="Center"
                        Margin="0,0,12,0"/>

                    <StackPanel>
                        <TextBlock 
                            Text="123 云盘 UWP" 
                            FontSize="16" 
                            FontWeight="SemiBold"/>
                        <TextBlock 
                            Text="此客户端由立夏明月制作，123云盘是西安一二三云计算有限公司的产品" 
                            FontSize="12" 
                            Opacity="0.7"/>
                    </StackPanel>
                </StackPanel>
                <TextBlock 
                    Text="0.0.4.0" 
                    FontSize="12" 
                    Opacity="0.7" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0,0,24,0"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <StackPanel Margin="30,50">
            <TextBlock 
        Text="设置" 
        FontSize="40"/>
            <TextBlock 
Text="应用主题" 
FontSize="15"/>
            <StackPanel HorizontalAlignment="Stretch" Margin="0">
                <controls:Expander HeaderTemplate="{StaticResource ThemeExpanderHeader}" MinHeight = "68"
      HorizontalAlignment="Stretch"
      HorizontalContentAlignment="Stretch"
      VerticalContentAlignment="Stretch"
      Margin="0">
                    <StackPanel Margin="24,8" HorizontalAlignment="Stretch">
                        <RadioButton x:Name="LightRadio" 
                 Content="浅色" 
                 GroupName="AppThemeGroup" 
                 Click="RadioButton_Click"
                 HorizontalAlignment="Left"
                 Margin="0,4,0,4"/>

                        <RadioButton x:Name="DarkRadio" 
                 Content="深色" 
                 GroupName="AppThemeGroup" 
                 Click="RadioButton_Click"
                 HorizontalAlignment="Left"
                 Margin="0,4,0,4"/>

                        <RadioButton x:Name="SystemRadio" 
                 Content="使用系统设置" 
                 GroupName="AppThemeGroup" 
                 Click="RadioButton_Click"
                 HorizontalAlignment="Left"
                 Margin="0,4,0,4"/>
                    </StackPanel>
                </controls:Expander>
                <controls:Expander HeaderTemplate="{StaticResource ThemeExpanderHeader2}" MinHeight = "68" IsEnabled="False"
HorizontalAlignment="Stretch"
HorizontalContentAlignment="Stretch"
VerticalContentAlignment="Stretch"
Margin="0">
                    <StackPanel Margin="24,8" HorizontalAlignment="Stretch">
                        <RadioButton x:Name="LightRadio1" 
           Content="Acrylic" 
           GroupName="AppThemeGroup" 
           Click="RadioButton_Click"
           HorizontalAlignment="Left"
           Margin="0,4,0,4"/>

                        <RadioButton x:Name="DarkRadio1" 
           Content="Mica" 
           GroupName="AppThemeGroup" 
           Click="RadioButton_Click"
           HorizontalAlignment="Left"
           Margin="0,4,0,4"/>

                        <RadioButton x:Name="SystemRadio1" 
           Content="使用系统设置" 
           GroupName="AppThemeGroup" 
           Click="RadioButton_Click"
           HorizontalAlignment="Left"
           Margin="0,4,0,4"/>
                    </StackPanel>
                </controls:Expander>
            </StackPanel>
            <TextBlock 
Text="文件管理" 
FontSize="15"/>
            <Grid HorizontalAlignment = "Stretch" Margin = "0,4,0,0" MinHeight = "68" MaxHeight = "68" Height = "68">
                <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{ThemeResource ButtonBackground}"/>
                            <Setter Property="Foreground" Value="{ThemeResource ButtonForeground}"/>
                            <Setter Property="BorderBrush" Value="{ThemeResource ButtonBorderBrush}"/>
                            <Setter Property="BorderThickness" Value="{ThemeResource ButtonBorderThemeThickness}"/>
                            <Setter Property="Padding" Value="8,4,8,4"/>
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}"/>
                            <Setter Property="FontSize" Value="{ThemeResource ControlContentThemeFontSize}"/>
                            <Setter Property="UseSystemFocusVisuals" Value="{StaticResource UseSystemFocusVisuals}"/>
                            <Setter Property="FocusVisualMargin" Value="-3"/>
                            <Setter Property="CornerRadius" Value="{ThemeResource ControlCornerRadius}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Grid x:Name="RootGrid" 
                              Background="{TemplateBinding Background}"
                              BorderBrush="{TemplateBinding BorderBrush}"
                              BorderThickness="{TemplateBinding BorderThickness}"
                              CornerRadius="{TemplateBinding CornerRadius}">
                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroup x:Name="CommonStates">
                                                    <VisualState x:Name="Normal"/>
                                                    <VisualState x:Name="PointerOver"/>
                                                    <VisualState x:Name="Pressed"/>
                                                    <VisualState x:Name="Disabled">
                                                        <Storyboard>
                                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootGrid" Storyboard.TargetProperty="Background">
                                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonBackgroundDisabled}"/>
                                                            </ObjectAnimationUsingKeyFrames>
                                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonForegroundDisabled}"/>
                                                            </ObjectAnimationUsingKeyFrames>
                                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootGrid" Storyboard.TargetProperty="BorderBrush">
                                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonBorderBrushDisabled}"/>
                                                            </ObjectAnimationUsingKeyFrames>
                                                        </Storyboard>
                                                    </VisualState>
                                                </VisualStateGroup>
                                                <VisualStateGroup x:Name="SelectionStates">
                                                    <VisualState x:Name="Unselected"/>
                                                    <VisualState x:Name="Selected"/>
                                                    <VisualState x:Name="SelectedUnfocused"/>
                                                </VisualStateGroup>
                                            </VisualStateManager.VisualStateGroups>
                                            <ContentPresenter x:Name="ContentPresenter"
                                              Content="{TemplateBinding Content}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              ContentTransitions="{TemplateBinding ContentTransitions}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"
                                              AutomationProperties.AccessibilityView="Raw"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                <FontIcon Glyph="&#xe74d;"
FontFamily="Segoe Fluent Icons"
Width="20" Height="20"
                HorizontalAlignment="Left"
          VerticalAlignment="Center"
          Margin="30,0,0,0"/>
                <TextBlock FontSize="16" Text = "直接永久删除文件" VerticalAlignment = "Center" HorizontalAlignment = "Left" Margin="60,0,0,0" />
                <ToggleSwitch Name="ShowCollection_Switch" Margin="0,0,-52,0" VerticalAlignment = "Center" HorizontalAlignment = "Right" IsEnabled="False"/>
            </Grid>
            <TextBlock 
Text="关于" 
FontSize="15"/>
            <StackPanel HorizontalAlignment="Stretch" Margin="0">
                <controls:Expander HeaderTemplate="{StaticResource CustomExpanderHeader1}" 
                           MinHeight="68"
                           HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Stretch"
                           VerticalContentAlignment="Stretch"
                           Margin="0">
                    <StackPanel Margin="24,8" HorizontalAlignment="Stretch">
                        <HyperlinkButton Content="123 云盘 UWP 使用协议" NavigateUri="https://flowus.cn/share/1032d3c8-ee26-453e-9b48-52d1581002f5"/>
                        <HyperlinkButton Content="发送反馈" NavigateUri="https://forms.office.com/Pages/ResponsePage.aspx?id=DQSIkWdsW0yxEjajBLZtrQAAAAAAAAAAAANAAVCNRo1UMjRKMEFVQU5PNFNJRDcyVkQ2UTVESU9PQi4u"/>
                    </StackPanel>
                </controls:Expander>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
